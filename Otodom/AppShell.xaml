<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Otodom.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Otodom.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="Otodom">

    <!-- Strona główna -->
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    
    <ShellContent Title="Kredyty"
                  ContentTemplate="{DataTemplate local:Kredyty}"
                  Route="KredytyPage" />
    <!-- Strona logowania -->
    <ShellContent
        Title="Logowanie"
        ContentTemplate="{DataTemplate local:LoginPage}"
        Route="LoginPage" />

    <!-- Strona rejestracji -->
    <ShellContent
        Title="Rejestracja"
        ContentTemplate="{DataTemplate local:RegisterPage}"
        Route="RegisterPage" />
</Shell>
