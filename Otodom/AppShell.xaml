<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Otodom.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Otodom.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="Otodom">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    
    <ShellContent 
        Title="Kredyty"
        ContentTemplate="{DataTemplate local:Loans}"
        Route="Loans" />

    <ShellContent
        Title="Logowanie"
        ContentTemplate="{DataTemplate local:LoginPage}"
        Route="LoginPage" />

    <ShellContent
        Title="Rejestracja"
        ContentTemplate="{DataTemplate local:RegisterPage}"
        Route="RegisterPage" />

    <ShellContent
        Title="Ogłoszenia"
        ContentTemplate="{DataTemplate local:Advertisement}"
        Route="Advertisement" />

    <ShellContent
        Title="Agencje"
        ContentTemplate="{DataTemplate local:Agencies}"
        Route="Agencies" />

    <ShellContent
        Title="Dodawanie ogłoszenia"
        ContentTemplate="{DataTemplate local:AddAdvertisement}"
        Route="AddAdvertisement" />

    <ShellContent
        Title="Kursy walut"
        ContentTemplate="{DataTemplate local:Currencies}"
        Route="Currencies" />
</Shell>
