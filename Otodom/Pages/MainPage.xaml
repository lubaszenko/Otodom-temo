<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Otodom.Models.ViewModels"
             x:Class="Otodom.Pages.MainPage"
             x:DataType="vm:WyswietlanieOgloszeniaViewModel"
             Title="Householding">

    <Grid>
        <Image Source="homepage.jpg"
               Aspect="AspectFill"
               Opacity="1"
               HorizontalOptions="FillAndExpand"
               VerticalOptions="FillAndExpand"/>

        <Label Text="Witamy na Householding"
               FontSize="40"
               FontAttributes="Bold"
               TextColor="White"
               Opacity="1"
               Padding="10"
               HorizontalOptions="Center"
               VerticalOptions="Start"
               HorizontalTextAlignment="Center"/>

        <ScrollView VerticalOptions="FillAndExpand">
            <StackLayout Spacing="20" Padding="10" Margin="0,140,0,0">
                <Frame BackgroundColor="White"
                       CornerRadius="10"
                       BorderColor="Gray"
                       Padding="15">
                    <StackLayout>
                        <Label Text="Luksusowy apartament w centrum miasta"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="Black"
                               HorizontalOptions="Start" />

                        <Label Text="Przestronny apartament o powierzchni 120 m² z widokiem na panoramę miasta. Idealny dla rodziny."
                               FontSize="14"
                               TextColor="Gray"
                               HorizontalOptions="Start"
                               Margin="0,5,0,10" />

                        <Label Text="Cena: 1 200 000 PLN"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="DarkGreen"
                               HorizontalOptions="Start" />

                        <StackLayout Orientation="Horizontal" Spacing="10" Margin="0,10,0,0">
                            <Label Text="Powierzchnia: 120 m²"
                                   FontSize="14"
                                   TextColor="Black" />
                            <Label Text="Pokoje: 3"
                                   FontSize="14"
                                   TextColor="Black" />
                        </StackLayout>
                    </StackLayout>
                </Frame>

                <Frame BackgroundColor="White"
                       CornerRadius="10"
                       BorderColor="Gray"
                       Padding="15">
                    <StackLayout>
                        <Label Text="Nowoczesny dom z ogrodem"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="Black"
                               HorizontalOptions="Start" />

                        <Label Text="Dom jednorodzinny o powierzchni 200 m² z dużym ogrodem i tarasem."
                               FontSize="14"
                               TextColor="Gray"
                               HorizontalOptions="Start"
                               Margin="0,5,0,10" />

                        <Label Text="Cena: 950 000 PLN"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="DarkGreen"
                               HorizontalOptions="Start" />
                    </StackLayout>
                </Frame>
                <Button Text="Kalkulator kredytów"
                        HorizontalOptions="Center"
                        VerticalOptions="Center" />
            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
