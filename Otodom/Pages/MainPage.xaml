<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Otodom.Models.ViewModels"
             x:Class="Otodom.Pages.MainPage"
             x:DataType="vm:MainPageViewModel"
             Title="Householding">

    <Grid>
        <Image Source="homepage.jpg"
               Aspect="AspectFill"
               Opacity="1"
               HorizontalOptions="FillAndExpand"
               VerticalOptions="FillAndExpand" />

        <Label Text="Witamy na Householding"
               FontSize="40"
               FontAttributes="Bold"
               TextColor="White"
               Opacity="1"
               Padding="10"
               HorizontalOptions="Center"
               VerticalOptions="Start"
               HorizontalTextAlignment="Center" />

        <ScrollView VerticalOptions="FillAndExpand">
            <StackLayout Spacing="30" Padding="10" Margin="0,140,0,0">
                <Frame BackgroundColor="#E3F2FD"
       CornerRadius="10"
       Padding="15"
       HorizontalOptions="Center"
       VerticalOptions="Center"
       IsVisible="{Binding IsNotLoggedIn}">
                    <StackLayout Spacing="10" HorizontalOptions="Center">
                        <Label Text="Zaloguj się lub załóż konto"
               FontSize="18"
               FontAttributes="Bold"
               TextColor="Black"
               HorizontalOptions="Center" />
                        <Button Text="Zaloguj się"
                Command="{Binding NavigateToLoginCommand}"
                BackgroundColor="#64B5F6"
                TextColor="White"
                CornerRadius="5" />
                        <Button Text="Załóż konto"
                Command="{Binding NavigateToRegisterCommand}"
                BackgroundColor="#64B5F6"
                TextColor="White"
                CornerRadius="5" />
                    </StackLayout>
                </Frame>

                <Frame BackgroundColor="White"
       CornerRadius="10"
       BorderColor="#E0E0E0"
       HasShadow="True"
       Padding="20"
       HorizontalOptions="Center"
       VerticalOptions="Center"
       IsVisible="{Binding IsLoggedIn}">
                    <StackLayout>
                        <Label Text="Sprzedaż własnego mieszkania?"
               FontSize="18"
               FontAttributes="Bold"
               TextColor="Black"
               Margin="0,0,0,10"
               HorizontalOptions="Center" />
                        <Label Text="Dodaj swoje ogłoszenie i dotrzyj do setek potencjalnych klientów. Nasza platforma ułatwi ci proces sprzedaży nieruchomości."
               FontSize="14"
               TextColor="Black"
               HorizontalOptions="Start"
               Margin="0,0,0,10" />
                        <Button Text="Dodaj ogłoszenie"
                Command="{Binding NavigateToAddAdvertisementCommand}"
                BackgroundColor="#64B5F6"
                TextColor="White"
                FontAttributes="Bold"
                CornerRadius="10"
                Padding="15,10"
                Margin="0,15,0,0"
                HeightRequest="50"
                HorizontalOptions="Center" />
                    </StackLayout>
                </Frame>
                <!-- Inne elementy -->
                <Frame BackgroundColor="White"
                       CornerRadius="10"
                       BorderColor="#E0E0E0"
                       HasShadow="True"
                       Padding="20"
                       HorizontalOptions="Center"
                       VerticalOptions="Center">
                    <StackLayout>
                        <Label Text="Ogłoszenia mieszkań"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="Black"
                               Margin="0,0,0,10"
                               HorizontalOptions="Center" />
                        <Label Text="Znajdź wymarzoną nieruchomość. Przeglądaj setki ogłoszeń domów, mieszkań, działek, lokali inwestycyjnych i innych nieruchomości, których nie znajdziesz nigdzie indziej."
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="Black"
                               HorizontalOptions="Start" />

                        <Button Text="Sprawdź mieszkania"
                                Command="{Binding NavigateToAdvertisementCommand}"
                                BackgroundColor="#64B5F6"
                                TextColor="White"
                                FontAttributes="Bold"
                                CornerRadius="10"
                                Padding="15,10"
                                Margin="0,15,0,0"
                                HeightRequest="50"
                                HorizontalOptions="Center" />
                    </StackLayout>
                </Frame>

                <Frame BackgroundColor="White"
                       CornerRadius="10"
                       BorderColor="#E0E0E0"
                       HasShadow="True"
                       Padding="20"
                       HorizontalOptions="Center"
                       VerticalOptions="Center">
                    <StackLayout>
                        <Label Text="Agencje nieruchomości"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="Black"
                               Margin="0,0,0,10"
                               HorizontalOptions="Center" />
                        <Label Text="Niezależnie od tego, czy postanowisz sprzedać sam, czy ze wsparciem agenta nieruchomości, pomożemy ci przejść przez ten proces szybko i sprawnie. Sprawdź możliwości!"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="Black"
                               HorizontalOptions="Start" />

                        <Button Text="Zobacz nasze agencje"
                                Command="{Binding NavigateToAgenciesCommand}"
                                BackgroundColor="#64B5F6"
                                TextColor="White"
                                FontAttributes="Bold"
                                CornerRadius="10"
                                Padding="15,10"
                                Margin="0,15,0,0"
                                HeightRequest="50"
                                HorizontalOptions="Center" />
                    </StackLayout>
                </Frame>

                <Frame BackgroundColor="White"
                        CornerRadius="10"
                        BorderColor="#E0E0E0"
                        HasShadow="True"
                        Padding="20"
                        HorizontalOptions="Center"
                        VerticalOptions="Center">
                    <StackLayout>
                        <Label Text="Kalkulator kredytu hipotecznego"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="Black"
                               Margin="0,0,0,10"
                               HorizontalOptions="Center" />
                        <Label Text="Kalkulator kredytu hipotecznego pozwala obliczyć wysokość raty kredytu na podstawie wprowadzonej ceny nieruchomości, wkładu własnego, okresu spłaty oraz oprocentowania. Dzięki temu narzędziu możesz szybko zaplanować wydatki związane z zakupem wymarzonej nieruchomości."
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="Black"
                               HorizontalOptions="Start" />

                        <Button Text="Oblicz swoją zdolność kredytową"
                                Command="{Binding NavigateToLoansCommand}"
                                BackgroundColor="#64B5F6"
                                TextColor="White"
                                FontAttributes="Bold"
                                CornerRadius="10"
                                Padding="15,10"
                                Margin="0,15,0,0"
                                HeightRequest="50"
                                HorizontalOptions="Center" />
                    </StackLayout>
                </Frame>
                <!-- Kafelek Wyloguj się -->
                <Frame BackgroundColor="White"
                       CornerRadius="10"
                       BorderColor="#E0E0E0"
                       HasShadow="True"
                       Padding="20"
                       HorizontalOptions="Center"
                       VerticalOptions="End"
                       IsVisible="{Binding IsLoggedIn}">
                    <StackLayout HorizontalOptions="Center">
                        <Button Text="Wyloguj się"
                                Command="{Binding LogoutCommand}"
                                BackgroundColor="#F44336"
                                TextColor="White"
                                FontAttributes="Bold"
                                CornerRadius="10"
                                Padding="15,10"
                                Margin="0,15,0,0"
                                HeightRequest="50"
                                HorizontalOptions="Center" />
                    </StackLayout>
                </Frame>
            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
