<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Otodom.Models.ViewModels"
             x:Class="Otodom.Pages.MainPage"
             x:DataType="vm:MainPageViewModel"
             Title="Householding">

    <Grid>
        <!-- Tło -->
        <Image Source="homepage.jpg"
               Aspect="AspectFill"
               Opacity="1"
               HorizontalOptions="FillAndExpand"
               VerticalOptions="FillAndExpand" />

        <!-- Nagłówek -->
        <Label Text="Witamy na Householding"
               FontSize="40"
               FontAttributes="Bold"
               TextColor="White"
               Opacity="1"
               Padding="10"
               HorizontalOptions="Center"
               VerticalOptions="Start"
               HorizontalTextAlignment="Center" />

        <!-- Treść w ScrollView -->
        <ScrollView VerticalOptions="FillAndExpand">
            <StackLayout Spacing="30" Padding="10" Margin="0,140,0,0">

                <!-- Karta 1 -->
                <Frame BackgroundColor="White"
               CornerRadius="10"
               BorderColor="#E0E0E0"
               HasShadow="True"
               Padding="20">
                    <StackLayout>
                        <Label Text="Dysponujemy największą bazą ogłoszeń nieruchomości w Polsce. Badamy preferencje, analizujemy dane i pomagamy zrozumieć rynek nieruchomości."
                       FontSize="14"
                       FontAttributes="Bold"
                       TextColor="Black"
                       HorizontalOptions="Start" />
                    </StackLayout>
                </Frame>

                <!-- Karta 2 -->
                <Frame BackgroundColor="White"
               CornerRadius="10"
               BorderColor="#E0E0E0"
               HasShadow="True"
               Padding="20">
                    <StackLayout>
                        <Label Text="Znajdź wymarzoną nieruchomość. Przeglądaj setki ogłoszeń domów, mieszkań, działek, lokali inwestycyjnych i innych nieruchomości, których nie znajdziesz nigdzie indziej."
                       FontSize="14"
                       FontAttributes="Bold"
                       TextColor="Black"
                       HorizontalOptions="Start" />
                        <!-- Margines dodany w przycisku -->
                        <Button Text="Sprawdź mieszkania"
                        Command="{Binding NavigateToAdvertisementCommand}"
                        BackgroundColor="#64B5F6"
                        TextColor="White"
                        FontAttributes="Bold"
                        CornerRadius="10"
                        Padding="15,10"
                        Margin="0,15,0,0"
                        HeightRequest="50"
                        HorizontalOptions="Center" />
                    </StackLayout>
                </Frame>

                <!-- Karta 3 -->
                <Frame BackgroundColor="White"
               CornerRadius="10"
               BorderColor="#E0E0E0"
               HasShadow="True"
               Padding="20">
                    <StackLayout>
                        <Label Text="Niezależnie od tego, czy postanowisz sprzedać sam, czy ze wsparciem agenta nieruchomości, pomożemy ci przejść przez ten proces szybko i sprawnie. Sprawdź możliwości!"
                       FontSize="14"
                       FontAttributes="Bold"
                       TextColor="Black"
                       HorizontalOptions="Start" />
                        <!-- Margines dodany w przycisku -->
                        <Button Text="Agencje nieruchomości"
                        Command="{Binding NavigateToAgenciesCommand}"
                        BackgroundColor="#64B5F6"
                        TextColor="White"
                        FontAttributes="Bold"
                        CornerRadius="10"
                        Padding="15,10"
                        Margin="0,15,0,0"
                        HeightRequest="50"
                        HorizontalOptions="Center" />
                    </StackLayout>
                </Frame>

                <!-- Kafelek logowania/rejestracji -->
                <Frame BackgroundColor="#E3F2FD"
                       CornerRadius="10"
                       Padding="15"
                       HorizontalOptions="Center"
                       VerticalOptions="Center">
                    <StackLayout Spacing="10" HorizontalOptions="Center">
                        <Label Text="Zaloguj się lub załóż konto"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="Black"
                               HorizontalOptions="Center" />
                        <Button Text="Zaloguj się"
                                Command="{Binding NavigateToLoginCommand}"
                                BackgroundColor="#2196F3"
                                TextColor="White"
                                CornerRadius="5" />
                        <Button Text="Załóż konto"
                                Command="{Binding NavigateToRegisterCommand}"
                                BackgroundColor="#64B5F6"
                                TextColor="White"
                                CornerRadius="5" />
                    </StackLayout>
                </Frame>
                <!-- Kafelek do kalkulatora kredytowego -->
                <Frame BackgroundColor="#FFFDE7"
                       CornerRadius="10"
                       Padding="15"
                       HorizontalOptions="Center"
                       VerticalOptions="Center">
                    <StackLayout Spacing="10" HorizontalOptions="Center">
                        <Label Text="Przejdź do kalkulatora kredytowego"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="Black"
                               HorizontalOptions="Center" />
                        <Button Text="Kalkulator kredytów"
                                Command="{Binding NavigateToLoansCommand}"
                                BackgroundColor="#FFD600"
                                TextColor="Black"
                                CornerRadius="5" />
                    </StackLayout>
                </Frame>
                <!-- Kafelek do ogłoszeń -->
                <Frame BackgroundColor="#FFFDE7"
                       CornerRadius="10"
                       Padding="15"
                       HorizontalOptions="Center"
                       VerticalOptions="Center">
                    <StackLayout Spacing="10" HorizontalOptions="Center">
                        <Label Text="Przejdź do ogłoszeń"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="Black"
                               HorizontalOptions="Center" />
                        <Button Text="Ogłoszenia domów"
                               Command="{Binding NavigateToAdvertisementCommand}"
                               BackgroundColor="#FFD600"
                               TextColor="Black"
                               CornerRadius="5" />
                    </StackLayout>
                </Frame>
                <!-- Kafelek do agencji -->
                <Frame BackgroundColor="#FFFDE7"
                       CornerRadius="10"
                       Padding="15"
                       HorizontalOptions="Center"
                       VerticalOptions="Center">
                    <StackLayout Spacing="10" HorizontalOptions="Center">
                        <Label Text="Agencje współpracujące"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="Black"
                               HorizontalOptions="Center" />
                        <Button Text="Zobacz nasze agencje"
                                Command="{Binding NavigateToAgenciesCommand}"
                                BackgroundColor="#FFD600"
                                TextColor="Black"
                                CornerRadius="5" />
                    </StackLayout>
                </Frame>
                <!-- Kafelek do dodania ogłoszenia -->
                <Frame BackgroundColor="#FFFDE7"
                       CornerRadius="10"
                       Padding="15"
                       HorizontalOptions="Center"
                       VerticalOptions="Center">
                    <StackLayout Spacing="10" HorizontalOptions="Center">
                        <Label Text="Chcesz sprzedać mieszkanie?"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="Black"
                               HorizontalOptions="Center" />
                        <Button Text="Dodaj ogłoszenie"
                                Command="{Binding NavigateToAddAdvertisementCommand}"
                                BackgroundColor="#FFD600"
                                TextColor="Black"
                                CornerRadius="5" />
                    </StackLayout>
                </Frame>
                <!-- Kafelek do kursów walut -->
                <Frame BackgroundColor="#FFFDE7"
                       CornerRadius="10"
                       Padding="15"
                       HorizontalOptions="Center"
                       VerticalOptions="Center">
                    <StackLayout Spacing="10" HorizontalOptions="Center">
                        <Label Text="Interesuje Cię kredyt w innej walucie?"
                                FontSize="18"
                                FontAttributes="Bold"
                                TextColor="Black"
                                HorizontalOptions="Center" />
                        <Button Text="Sprawdź kursy walut"
                                Command="{Binding NavigateToCurrenciesCommand}"
                                BackgroundColor="#FFD600"
                                TextColor="Black"
                                CornerRadius="5" />
                    </StackLayout>
                </Frame>
            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
