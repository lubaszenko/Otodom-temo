<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Otodom.Pages.LoginPage"
             Title="Logowanie">

    <StackLayout Padding="20" Spacing="10">
        <Entry Placeholder="Login" Text="{Binding Login}" />
        <Entry Placeholder="Hasło" IsPassword="True" Text="{Binding Password}" />
        <Button Text="Zaloguj" Command="{Binding LoginCommand}" />
        <Button Text="Zarejestruj się" Command="{Binding NavigateToRegisterCommand}" />
    </StackLayout>
</ContentPage>
